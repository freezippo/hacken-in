- if controller_name != 'sessions'
  &nbsp;
  = link_to t('registrations.shared.login'), new_session_path(resource_name)

- if devise_mapping.registerable? && controller_name != 'registrations'
  &nbsp;
  = link_to t('registrations.shared.register'), new_registration_path(resource_name)

- if devise_mapping.recoverable? && controller_name != 'passwords'
  &nbsp;
  = link_to t('registrations.shared.password_forgotten'), new_password_path(resource_name)
